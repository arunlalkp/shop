<div class="row">
    <div class="col-md-8 mx-auto">
        <h1>User Profile</h1>
        <hr>
        <h2>My orders</h2>
            {{# each result }}
                <div class="card">
                    <div class="card-body">
                        <ul class="list-group">
                            {{# each this.items }}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {{ this.item.title }} | {{ this.qty }} Pairs
                                    <span class="badge badge-primary badge-pill">{{ this.price }}</span>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="card-footer text-muted">
                        Total Price: ${{ this.cart.totalPrice }}
                    </div>
                </div>
            {{/each}}
    </div>
</div>