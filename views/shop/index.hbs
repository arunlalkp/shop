<div class="row">
    <div class="col-md-6 mx-auto">
        <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}" style="margin-top: 30px;">
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-3">
                <div class="card" style="max-width: 15rem; min-width: 10rem">
                    <img src="{{ this.imagePath}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title}}</h5>
                        <p class="card-text">{{ this.description}}</p>
                        <div class="price">
                            <b>${{ this.price}}</b>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}
